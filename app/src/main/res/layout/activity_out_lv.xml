<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/OName"
            android:layout_width="80dp"
            android:text="名称"/>

        <TextView
            android:id="@+id/OPrice"
            android:gravity="right"
            android:text="进价"/>

        <TextView
            android:id="@+id/OStock"
            android:gravity="right"
            android:text="数量"/>


    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/OOutNumber"
            android:gravity="right"
            android:text="数量"/>

        <TextView
            android:id="@+id/OOutPrice"
            android:gravity="right"
            android:text="价格"/>

        <TextView
            android:id="@+id/OOutValue"
            android:gravity="right"
            android:text="小计"/>

        <TextView
            android:id="@+id/OGain"
            android:gravity="right"
            android:text="盈利"/>

    </TableRow>
</TableLayout>
